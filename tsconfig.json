{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "pretty": true,
        "inlineSourceMap": true,
        "target": "es6",
        "outDir": "./dist",
        "lib": [
        "es6"
        ],
        "resolveJsonModule": true,
        "types": [
        "node"
        ],
        "typeRoots": [
        "./node_modules/@types",
        "./src/@types"
        ],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
    },
    "include": [
        "src/infra/sequelize/**/*.js",
        "src/infra/sequelize/**/*.ts",
        "./src/**/*.js",
        "./src/**/*.ts",
        "./src/**/*.js",
        "./src/**/*.json",
        "index.ts",
    ],
    "exclude": [
        "node_modules",
        "!node_modules/@types",
        "./dist"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
}
