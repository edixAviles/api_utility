{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": false,
        "rootDir": ".",
        "strict": true,
        "noEmit": false,
        "resolveJsonModule": true,
        "noUnusedLocals": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        
        "strictPropertyInitialization": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
