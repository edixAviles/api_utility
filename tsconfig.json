{
    "compilerOptions": {
        "target": "es2016",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": false,
        "module": "CommonJS",
        "strictNullChecks": true,
        "noImplicitAny": true,
        "baseUrl": "./src"
    },
    "include": [
        "src"
    ]
}